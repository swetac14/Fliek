@model IEnumerable<Fliek.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Count() > 0)
{

    <table id="tblCustomers" class="table  table-responsive table-hover">
        <tr>
            <th>Name</th>
            <th>Subscribed</th>
            <th>Membership Type</th>
            <th></th>
        </tr>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(obj.FirstName + " " + obj.LastName, "Details", "Customers", new { id = obj.Id }, null)
                </td>
                <td>@obj.IsSuscribedToNewsletter</td>
                <td>@obj.MembershipType.Name</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = obj.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = obj.Id }) |
                    <button data-customer-id="@obj.Id" class="btn-link js-delete">Delete</button>
                    @*@Html.ActionLink("Delete", "Delete", new { id = obj.Id })*@
                </td>

            </tr>
        }
    </table>
}
else
{
    <p>We do not have any customers yet.</p>
}

<button type="submit" class="btn btn-primary" onclick="location.href='@Url.Action("New", "Customers")'">Create New Customer</button>

@section scripts{
    <script>
         $(document).ready(function() {  
             alert("Hey! I am ready");
             $("#tblCustomers .js-delete").on("click", function () {
                 var button = $(this);
                 if (confirm("Are you sure you want to delete this customer?")) {
                     $.ajax({
                         url: "/api/customers/" + button.attr("data-customer-id"),
                         method: "DELETE",
                         success: function () {
                             button.parents("tr").remove();
                         }
                     });
                 }
             });
    });  
        
    </script>
    
    }