@model Fliek.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.MovieName</h2>

<table class="table  table-hover">
    <tr>
        <td>Genre: @Model.GenreType.Genre</td>
    </tr>
    @if (Model.ReleaseDate != null)
    {
        <tr>
            <td>Release Date: @Model.ReleaseDate</td>
        </tr>
    }
    <tr>
        <td>Date Added: @Model.DateAdded</td>
    </tr>
    <tr>
        <td>Rating: @Model.Rating</td>
    </tr>
    <tr>
        <td>No. in stock: @Model.NumberInStock</td>
    </tr>
</table>

<div>
    @Html.ActionLink("Back to Movies List", "Index")
</div>

